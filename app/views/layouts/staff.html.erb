<!DOCTYPE html>
<html>
  <head>
    <title><%= document_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'staff', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# 追加 %>
    <div id="wrapper">
      <%# header %>
      <%= render "shared/header" %>

      <%# main contents %>
      <div id="container">
        <%= yield %>
      </div>

      <%# footer %>
      <%= render "shared/footer" %>
    </div>
  </body>
</html>
